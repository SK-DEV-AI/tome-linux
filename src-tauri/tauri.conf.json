{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "build": {
        "beforeBuildCommand": "pnpm run build",
        "beforeDevCommand": "pnpm run dev",
        "frontendDist": "../build",
        "devUrl": "http://localhost:5173"
    },
    "bundle": {
        "active": true,
        "category": "DeveloperTool",
        "copyright": "",
        "targets": [
            "deb"
        ],
        "externalBin": [],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png"
        ],
        "longDescription": "",
        "resources": {
            "python": "python",
            "uvx": "uvx",
            "node": "node",
            "npx": "npx",
            "bunx": "bunx"
        },
        "shortDescription": "",
        "linux": {
            "deb": {
                "depends": []
            }
        }
    },
    "productName": "Tome",
    "mainBinaryName": "tome",
    "version": "0.10.1",
    "identifier": "co.runebook",
    "plugins": {
        "sql": {
            "preload": [
                "sqlite:tome.db"
            ]
        },
        "deep-link": {
            "desktop": {
                "schemes": [
                    "tome"
                ]
            }
        },
        "updater": {
            "active": false
        }
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Tome",
                "width": 1024,
                "height": 768,
                "resizable": true,
                "fullscreen": false,
                "visible": false
            }
        ],
        "security": {
            "csp": null,
            "capabilities": [
                {
                    "identifier": "default-capability",
                    "windows": [
                        "*"
                    ],
                    "permissions": [
                        "core:default",
                        "opener:default",
                        "fs:default",
                        "fs:allow-appdata-read",
                        "fs:allow-appdata-write",
                        "fs:allow-resource-read",
                        "sql:default",
                        "updater:default",
                        "window-state:default"
                    ]
                }
            ]
        }
    }
}
